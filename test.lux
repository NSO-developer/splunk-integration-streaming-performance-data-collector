    [progress "\nStart Collecting Data for X=$X....\n"]
    !make collect && echo ==$$?==
    ?==0==

[shell trigger]
    [timeout infinity]
    [progress "\Triggering....\n"]
    #The operation you want to collect data on
    !commit
    ???Commit complete.

[shell collect]
    [progress "\nStop Collecting and Start Processing Data....\n"]
    !make X=$X stop_collect && echo ==$$?==
    ?==0==



